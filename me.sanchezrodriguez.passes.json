{
    "app-id" : "me.sanchezrodriguez.passes",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "45",
    "sdk" : "org.gnome.Sdk",
    "command" : "passes",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "cleanup-commands" : [
        "find /app -type d -name blueprintcompiler | xargs rm -fr"
    ],
    "modules" : [
        "modules/blueprint.json",
        "modules/zint.json",
        {
            "name" : "passes",
            "builddir" : true,
            "buildsystem" : "meson",
            "config-opts": [ "-Dprofile=development" ],
            "sources" : [
                {
                    "type" : "dir",
                    "path" : "."
                }
            ]
        }
    ]
}
